{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "BUILD C/C++!",
			"command": "/usr/bin/g++",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${fileDirname}/*.cpp",
				"-I",
				"${fileDirname}",
				"/Ob2",
				"-o",
				"basic",
				"-Wall",
				"-Wextra",
				"-Wpedantic",
				"-Wno-unused-variable"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/g++"
		}
	]
}